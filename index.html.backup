                                }}>
                                    <div style={{ 
                                        width: '32px', 
                                        height: '32px', 
                                        background: 'var(--primary)', 
                                        borderRadius: '50%',
                                        display: 'inline-flex',
                                        alignItems: 'center',
                                        justifyContent: 'center',
                                        marginBottom: 'var(--space-2)',
                                        color: 'white',
                                        fontSize: '18px'
                                    }}>
                                        {dashboardData.user.levelIcon}
