modules = ["flutter"]

[nix]
channel = "stable-24_05"
packages = ["flutter", "chromium"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Server"

[[workflows.workflow]]
name = "Flutter Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter pub get && flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter pub get && flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000"]
